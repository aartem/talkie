<?xml version="1.0" encoding="UTF-8"?>
<project name="talkie" default="package">

    <property name="src" location="src/java"/>
    <property name="build" location="target/classes"/>

    <target name="package">
        <javac srcdir="${src}" destdir="${build}"/>
        <jar destfile="target/talkie.jar" basedir="${build}">
            <manifest>
                <attribute name="Main-Class" value="exigen.students.App"/>
            </manifest>
        </jar>
    </target>
	
</project>